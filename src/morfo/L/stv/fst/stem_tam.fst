# start -> -3L        [:]       [tm=imf,vc=smp]

### B (CC_C)

-2B_ -> -2V         [_]

-2B -> -2B_         [X]
-3BV -> -2B         [e:]
-3B -> -3BV         [X]

# initial L; no vc=tr
-3AL -> -2B         [a:']     [vc=smp];[vc=ps];[vc=cs]

simp -> -3B         [:]

### Quad (CCCC)

# geminated
-2.4 -> -2.4._      [:]
# not geminated
-2.4 -> -2.4*       [:]
-2.4._ -> -2.4_     [X/L]
-2.4_ -> -2V        [_]
# not geminated
-2.4* -> -2V        [X/L]
-2.4* -> -2V        [:']
# long vowels probably only possible with C1='
-3.4V -> -2.4._     [e:]                     # ;a;O;E]
-3.4V -> -2.4*      [e:]   [tm=prf];[tm=imf] # ;a;O;E]
# only if not geminated
-3.4V -> -2.4*      [:]    [tm=j_i]          # ;a;O;E] 

-3.4 -> -3.4V       [X]
-4.4V -> -3.4       [e:]

-4.4 -> -4.4V       [X/L]

# First consonant of CCCC verbs
simp -> -3.4        [X/L]
# Lexical n possible after C1='
simp -> -3.4n       [I:']
-3.4n -> -3.4       [n:M;:]

### ...aCC: C (CaCC), CCaCC

-3an -> -2.4        [n:M;:]
-3aV -> -3an        [O;E;U;i;a]
# C'C reduplication
-3aV ->  -1         [a:']          [as=it]

-3a -> -3aV         [X/L]
-4aV -> -3a         [a;E;i]           # E,i needed for etmIsEsakkere, etmIsisakkIr

# C1=' reduplication
-4aVL -> -4anL      [I:a;I:E;u:O]
-4anL -> -3aL       [n:M;:]
-3aL -> -3aVL       [X/L]
-3aVL -> -2.4       [a]

-4a -> -4aV         [X/L]

simp -> -3a         [:;X/L]
simp -> -4a         [:;X/L]
simp -> -4aVL       [:']          [as=it]

at -> -3a           [:;X/L]
at -> -4a           [:;X/L]
# Drop initial ' after at
at -> -3aV          [:']
at -> -4aVL         [:']          [as=it]

### ...'CVCCC

-3a.n -> -3a.        [n:M;:]
-3a.V -> -2.4        [O;E;U;i;a]

-3a. -> -3a.V        [X]
-4a.V -> -3a.        [a;E;i]          # E,i needed for etmIsEsakkere, etmIsisakkIr

-4a. -> -4a.V        [X]

-4a.n -> -4a.        [n:M;:]

simp -> -4a.n        [I:']
simp -> -3a.n        [I:']

at -> -4a.n          [I:']
at -> -3a.n          [I:']

end ->
