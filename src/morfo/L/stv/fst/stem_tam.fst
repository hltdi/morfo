-3LV -> -1          [a:']     [tm=prf];[tm=imf,vc=ps];[tm=j_i,vc=ps];[tm=j_i,vc=smp]
-3LV -> -1          [i:']     [tm=imf,vc=smp];[tm=imf,vc=tr];[tm=imf,vc=cs];[tm=j_i,vc=tr];[tm=j_i,vc=cs]

-3L -> -3LV         [X/L]

simp -> -3L         [:]
