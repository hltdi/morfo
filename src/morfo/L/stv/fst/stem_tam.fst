## perfective, imperfective, gerundive, jussive-imperative stems
-> start

#### MULTIPLE LANGUAGES AND TAMs

### PREFIXES

start -> a          [e:]      [vc=tr]
# Perfective and gerundive (Ti,Am); imperative (all languages)
# te- can become t- in Silt'e
start -> te         <*t:>     [vc=ps]
start -> at        <et:>     [vc=cs]
# For cases where Ti imperfective passive has no prefix (CCC, CC_C, CCCC)

te -> simp          [:]
a -> simp           [:]       [as=smp];[as=it]
start -> simp       [:]       [vc=smp]

### END

-1 -> end           [X/L-y,Y]

# Final vowels for most situations
-2V -> -1           [e:]      [tm=imf,vc=ps];[tm=j_i,vc=ps];[tm=prf]
-2V -> -1           [:]       [tm=imf,vc=smp];[tm=imf,vc=cs];[tm=imf,vc=tr];[tm=j_i,vc=cs];[tm=j_i,vc=tr];[tm=j_i,vc=smp]

# Final ', Y, y
-2V -> end          [a:']     [tm=prf];[tm=imf];[tm=j_i]
# Keep the Y because we need it for palatalization of the previous consonant
-2V -> -2Va         [Y;:y]    [tm=prf]
-2Va -> end         [E:]
-2V -> end          [Y;:y]    [tm=imf];[tm=j_i]

### A (CCC)

-2A_ -> -2V         [:]       [tm=imf];[tm=prf];[tm=j_i,vc=tr];[tm=j_i,vc=cs]
# e for ps and smp in jussive-imperative
-2A_ -> -1          [e:]      [tm=j_i,vc=ps];[tm=j_i,vc=smp]

-2A -> -2A_         [X/L]     [tm=prf];[tm=j_i]
-2A -> -2A_         [X/L]     [tm=imf]
-2An -> -2A         [n:M]
-2An -> -2A         [:]
-3AV -> -2An        [e:]      [tm=prf]
-3AV -> -2An        [e:]      [tm=imf];[tm=j_i,vc=ps];[tm=j_i,vc=cs]
# First vowel in CCC jussive/imperative non-passive
-3AV -> -2An        [:]       [tm=j_i,vc=smp];[tm=j_i,vc=tr]
-3 -> -3AV          [X]

# initial '; no vc=tr possible
-3AL -> -2A         [a:']     [tm=prf,vc=smp];[tm=prf,vc=ps];[tm=prf,vc=cs];[tm=ger,vc=smp];[tm=ger,vc=ps];[tm=ger,vc=cs]
-3AL -> -2A         [a:']     [tm=imf,vc=smp];[tm=imf,vc=ps];[tm=imf,vc=cs];[tm=j_i,vc=ps];[tm=j_i,vc=cs]
-3AL -> -2A         [I:']     [tm=j_i,vc=smp]

simp -> -3          [:]
simp -> -3AL         [:]

### A (CLC, imperfective)

#-2LV -> -1          [a:]      [vc=ps]
