  harã*                 [rel=obl,tm=None,tmp=fut,mod=ind,-negipv]
  --                    [rel=None,prob=None,tm=None|ta|kuri|rakae|moã,-negipv,impopt=[-mi,-ke,-na],asp=[-va,-obl]]

