### MA/VOI/NTE 1 (antes de tiempo2)
$ mantegueteri
  !ma                   [asp=[+prf,-gueteri],misc=[-nte,-mante,-manterei]]
  !nte                  [misc=[+nte,-mante,-manterei],asp=[-prf,-gueteri]]
  !ntema                [misc=[+nte,-mante,-manterei],asp=[+prf,-gueteri]]
  # !mante is 'obligatorily', seems to require va'erã; tonic mante is 'frequently'
  # va'erã almost always dominates the accent
  !mante                [misc=[+mante,-manterei,-nte],asp=[-prf,-gueteri],tm=vaerã]
  !manterei             [misc=[+manterei,-nte],asp=[-prf,-gueteri],tm=vaerã]
  !gueteri              [asp=[+gueteri,-prf],misc=[-nte,-mante,-manterei]]
  ## can precede tiempo
  --                    [asp=[-prf,-gueteri],misc=[-mante,-manterei,-nte]]

### TIEMPO 3, MODALIDAD, RELATIVIZACIÓN
$ tmp3
  va'ekue*              [tm=vaekue,tmp=pcp,mod=ind,rel=None];[rel=sjoj,tm=None,tmp=prt|ipf,mod=ind]
  va'erã*               [tm=vaerã,asp=[+obl],prob=None,-neg,-negipv,mod=ind,rel=None,tmp=fut];[rel=sjoj,tm=None,tmp=fut,-neg,-negipv,mod=ind]
  # va is probably not compatible with some other aspect markers (ma?)
  !va                   [asp=[+va],mod=ind,tmp=prs,rel=None];[rel=sjoj,tm=None,mod=ind,tmp=prs]
  'akue                 [tm=akue,tmp=prt,rel=None,mod=ind]
  !mi                   [tm=mi,tmp=ipf,rel=None,mod=ind]
  !ne                   [tm=ne,tmp=fut,prob=lo,rel=None,-neg,-negipv,mod=ind]
  'arã                  [tm=arã,prob=None,tmp=fut,-neg,-negipv,rel=None,mod=ind,asp=[-obl]]
  !ke                   [tmp=ipv|sbp,impopt=[+ke],mod=imp|opt,rel=None,-neg,-negipv]
  mi                    [tmp=ipv|sbp,impopt=[+mi],mod=imp|opt,rel=None,-neg,-negipv]
  !na                   [tmp=ipv|sbp,impopt=[+na],mod=imp|opt,rel=None,-neg,-negipv]
  # Really imperative but morphologically indicative
  !tei                  [tmp=ipv,rel=None,-neg,+negipv,mod=ind,tm=None]
