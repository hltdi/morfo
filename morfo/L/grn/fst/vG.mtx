### PRONOMBRES: NÚMERO Y PERSONA, PAPAPY HA AVAITE

$ pro
  -> fin_raiz     +v_irrG+   [cat=a,subcat=0]  # saltar voz para verbos irregulares
  # Adjectives don't need any prefix (and <h -> h); neither do verb infinitives
  --                      [pos=a,cat=adj,subcat=0];[pos=v,tmp=inf,-rflx,-trans]
  ## 1 sing
  # 1 sing sj; 3 or null oj
  [ps=1,ns=0,po=3]
    # areal, aireal
    a                     [cat=a,mod=ind]
    ta                    [cat=a,mod=opt,tmp=sbp]
    # chendal
    che$                  [pos=v,cat=che|adj,mod=ind]
    tache$                [pos=v,cat=che|adj,mod=opt,tmp=sbp]
  # 1 sing oj; 2 or 3 sj
  [po=1,no=0,+trans]
    che$                  [cat=a,ps=2|3]
  ## 2 sing.
  # 2 sing sj; 3 or null oj
  [ps=2,ns=0,po=3]
    re                    [cat=a,mod=ind]
    e                     [cat=a,mod=imp,tmp=ipv]
    tere                  [cat=a,mod=opt,tmp=sbp]
    De$                   [pos=v,cat=che,mod=ind];[pos=v,cat=adj,mod=ind]
    taDe$                 [pos=v,cat=che,mod=opt,tmp=sbp];[pos=v,cat=adj,mod=opt,tmp=sbp]
  # 2 sing oj; 1 or 3 sj
  [po=2,no=0,+trans]
    De$                   [cat=a,ps=3,mod=ind|opt]
    ro                    [cat=a,ps=1,-clu,mod=ind]
    toro                  [cat=a,ps=1,-clu,mod=opt,tmp=sbp]
  ## 3 sing./plur.
  # 3 sj; 3 or null oj
  [ps=3,po=3]
    o                     [cat=a,mod=ind,tmp=prs|fut|prt|ipf|pcp]
    to                    [cat=a,mod=opt,tmp=sbp]
    # 3 pred adjs have i-
    I                     [pos=v,cat=che,mod=ind];[pos=v,cat=adj,mod=ind]
    taI                   [pos=v,cat=che,mod=opt,tmp=sbp];[pos=v,cat=adj,mod=opt,tmp=sbp]
  ## 1 plur. incl.
  # 1 pi sj; 3 or null oj
  [ps=1,ns=1,+clu,po=3]
    Ja                    [cat=a,mod=ind]
    taJa                  [cat=a,mod=opt,tmp=sbp]
    ñaDe$                 [pos=v,cat=che,mod=ind];[pos=v,cat=adj,mod=ind]
    tañaDe$               [pos=v,cat=che,mod=opt,tmp=sbp];[pos=v,cat=adj,mod=opt,tmp=sbp]
  # 1 pi oj; 3 sj
  ñaDe$                   [cat=a,po=1,no=1,+oclu,ps=3,+trans]
  ## 1 plur. excl
  # 1 pe sj; 3 or null oj
  [ps=1,ns=1,-clu,po=3]
    ro                    [cat=a,mod=ind]
    toro                  [cat=a,mod=opt,tmp=sbp]
    ore$                  [pos=v,cat=che,mod=ind];[pos=v,cat=adj,mod=ind]
    taore$                [pos=v,cat=che,mod=opt,tmp=sbp];[pos=v,cat=adj,mod=opt,tmp=sbp]
  # 1 pe oj; 2 or 3 sj
  ore$                    [cat=a,po=1,no=1,-oclu,ps=2|3,+trans]
  ## 2 plur.
  # 2 plur sj; 3 or null oj
  [ps=2,ns=1,po=3]
    pe                    [cat=a,mod=ind];[cat=a,mod=imp,tmp=ipv]
    tape                  [cat=a,mod=opt,tmp=sbp]
    peDe$                 [pos=v,cat=che,mod=ind];[pos=v,cat=adj,mod=ind]
    tapeDe$               [pos=v,cat=che,mod=opt,tmp=sbp];[pos=v,cat=adj,mod=opt,tmp=sbp]
  # 2 plur oj; 1 or 3 sj
  [po=2,no=1,+trans]
    peDe$                 [cat=a,ps=3,mod=ind|opt]
    po                    [cat=a,ps=1,-clu,mod=ind]
    # estoy adivinando ...; no he leído nada sobre esta forma
    tapo                  [cat=a,ps=1,-clu,mod=opt,tmp=sbp]

### VOZ, ÑE'ẼAPOHO

$ voz
  # only a(i)real verbs without mood prefixes can be transitive
  --                    [voz=smp,-rztrans,-rflx,-trans];[cat=a,voz=smp,+rztrans,+trans,-rflx];[pos=v,tmp=inf,voz=smp]
  [voz=intrans,+rztrans,-rflx,-trans]
    # v. subsuntiva (FdG)
    poro  # objeto subsumido = persona (FdG)
#    mba'e # objeto subsumido = animal o cosa (FdG)
  # Don't try these with lexical causative mbo/mo-
  [voz=caus,-rztrans,+trans,-rflx]
  # apparently Bo and guero can co-occur: -porombogueroguata- (Galeano's long example)
  # Bo- -> mo-, mbo-, but also m(b)y-, m(b)u- before a and e
    # v. coactiva (FdG)
    Bo
#    # v. objetiva (FdG)        
#    guero
  # v. pasiva / reflexiva
  Je                   [voz=reflx,+rztrans,+rflx]
  # v. reciproca
  Jo                   [voz=recip,+rztrans,+rflx]

### PREFIJO DE RAIZ

$ preraiz
  # sometimes also with reflx
  i                     [subcat=i,+trans,po=3];[subcat=i,+trans,po=2,ps=1];[subcat=i,-trans,-rflx]
  # for generation, strict rules for gue, but lots of variability within persons and verbs
  gue                   [subcat=gue,ps=3,po=3];[subcat=gue,ps=1,ns=1,-clu,po=3]
  # 1p or 2p (3s) objects or passive/reflexive
  re                    [subcat=gue,po=1];[subcat=gue,po=2,ps=2|3];
                        [subcat=gue,voz=reflx,+rflx]
  --                    [subcat=0];[pos=v,tmp=inf];
                        [subcat=i,po=1];[subcat=i,po=2,ps=3];[subcat=i,+rflx];
                        [subcat=gue,ps=1,ns=0];[subcat=gue,ps=2];[subcat=gue,ps=1,ns=1,+clu]

